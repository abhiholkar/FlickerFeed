<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowBackground">@color/color_bg</item>
    </style>

    <style name="item">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:textColor">@color/color_item_text</item>
    </style>

    <style name="itemcontainer">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:background">@drawable/rectangle</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="error_style">
        <item name="android:visibility">gone</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:textColor">@color/color_item_text</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="pb_style">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <style name="list_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:visibility">gone</item>
        <item name="android:layout_margin">@dimen/common_margin</item>
    </style>

    <style name="labelstyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:textColor">@color/color_label_text</item>
    </style>

    <style name="descriptionstyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">@dimen/common_padding</item>
        <item name="android:textColor">@color/color_value_text</item>
    </style>

    <style name="image_style">
        <item name="android:layout_margin">@dimen/common_margin</item>
        <item name="android:layout_width">480dp</item>
        <item name="android:layout_height">360dp</item>
    </style>


</resources>
